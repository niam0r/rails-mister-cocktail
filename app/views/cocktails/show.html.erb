<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= @cocktail.photo %> );">

  <h1><%= @cocktail.name %></h1>

</div>

<div class="container">
  <div class="wrapper">

    <div class="card">
      <h3>Description</h3>
      <h4><%= @cocktail.description %></h4>

      <%= link_to "Edit the description", edit_cocktail_path(@cocktail), class: "btn btn-info" %>

    </div>

    <div class="card">
      <h3>Ingredients</h3>
      <% @cocktail.doses.each do |dose| %>
        <ul class="list-unstyled">
          <li>
          <strong><%= dose.ingredient.name %></strong>
            <%= dose.description %>

            <%= link_to(dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }) do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>

          </li>
        </ul>
      <% end %>

      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-info" %>
    </div>

  </div>
</div>

