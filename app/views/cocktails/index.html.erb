<div class="container">
  <div class="row">

    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-6 col-lg-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card card-link" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( '<%= cl_image_path(cocktail.photo? ? cocktail.photo : 'fysedljjycu4kwcqsasb') %>' );">


            <div class="text-center">
              <h1><%= cocktail.name %></h1>
            </div>

          </div>
        <% end %>
      </div>

    <% end %>

  </div>
</div>
